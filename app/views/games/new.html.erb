<div class="container">
  <h1>New Game</h1>
  <div class="row">
    <% @letters.each do |letter| %>
        <div class="col"><%= letter %></div>
    <% end %>
  </div>
<p>What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
<div class="input-group mb-3 mt-3">
 <input type="text" class="form-control" name="word" value="<%= params[:word] %>" aria-label="Recipient's word" aria-describedby="button-addon2">
 <button class="btn btn-primary" type="submit" id="button-addon2">Play</button>
</div>
</form>
</div>
